{
  "manifest_version": 2,
  "name": "Extrack",
  "version": "1.0",
  "description": "Analyse browser extension installed",
  "homepage_url": "https://github.com/suhail97s/Extrack",

  "icons": {
    "48": "icons/analyse-48.png",
    "96": "icons/analyse-96.png"
  },

  "permissions":[
    "activeTab",
    "management",
    "tabs",
    "storage",
    "<all_urls>"
  ],

  "browser_action": {
    "default_icon": "icons/analyse-48.png",
    "default_title": "Extrack",
    "browser_style": true
  },

  "background":{
    "scripts": ["bundle.js","extrack.js"],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["bundle.js"]
    }
  ]
}
